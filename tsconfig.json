{
	"compilerOptions": {
		"lib": [
			"dom",
			"es2015",
			"es2017"
		],
		"outDir": "./build/",
		"sourceMap": true,
		"strict": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es5",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"allowJs": true,
		"paths": {
			"*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
